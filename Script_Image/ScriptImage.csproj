<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>netstandard2.0;net5.0;net6.0</TargetFrameworks>
	  <Product>Script Image</Product>
	  <Company>yousef0sa</Company>
	  <Description>a library that helps to create scripts using images.</Description>
	  <PackageProjectUrl>https://github.com/yousef0sa/Script_Image</PackageProjectUrl>
	  <PackageId>Script.Image</PackageId>
	  <Title>ScriptImage</Title>
	  <PackageTags>Script Image</PackageTags>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
	  <PackAsTool>False</PackAsTool>
	  <Authors>yousef</Authors>

	  <!--This form is for testing the package and if you what to release, return it to its original form Like 1.0.1 -->
	  <Version>1.0.1-$(Configuration)-$(Platform)-$([System.DateTime]::UtcNow.ToString(yyyyMMdd-HHmmss))</Version>

  </PropertyGroup>
	<!--Conditionally obtain references for the .NET 5.0 target-->
	<ItemGroup Condition=" '$(TargetFramework)' == 'net5.0' ">

	</ItemGroup>
	<!--Conditionally obtain references for the .NET 6.0 target-->
	<ItemGroup Condition=" '$(TargetFramework)' == 'net6.0' ">

	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpenCvSharp4" Version="4.6.0.20220608" />
    <PackageReference Include="OpenCvSharp4.Extensions" Version="4.6.0.20220608" />
    <PackageReference Include="OpenCvSharp4.runtime.win" Version="4.6.0.20220608" />
  </ItemGroup>

</Project>
